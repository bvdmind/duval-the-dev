<%= form_for @contact_form, url: pages_contact_path do |f| %>
  <div class="field has-addons">
    <div class="control">
      <%= f.text_field :first_name, required: true, placeholder: "First name", class: "input" %>
    </div>
    <div class="control">
      <%= f.text_field :last_name, required: true, placeholder: "Last name", class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
    <%= f.email_field :email, required: true, placeholder: "Email address", class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
    <%= f.text_area :message, required: true, placeholder: "Email address", class: "textarea" %>
    </div>
  </div>

  <%= f.hidden_field :nickname, hint: "Leave this blank" %>

  <div class="field">
    <div class="control has-text-centered">
      <%= f.submit "Send", class: "button is-link" %>
    </div>
  </div>
<% end %>
